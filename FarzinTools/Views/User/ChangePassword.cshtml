@model FarzinTools.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "تغییر رمز کاربر";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="#">خانه</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card col-md-6">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
            </div>
            @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        <label for="date">کلمه عبور فعلی</label>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="date">کلمه عبور جدید</label>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="date">تایید کلمه عبور</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" id="btn-save" class="btn btn-primary">ذخیره</button>
                </div>
                <!-- /.card-footer-->
            }
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>